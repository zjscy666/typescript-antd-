{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/**/**/*.jsx",
      "src/**/*.jsx",
      "src/index.tsx",
      "src/**/*.js"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "binary-expression-operand-order": false
  },
  "jsRules": {
    "object-literal-sort-keys": false
  }
}